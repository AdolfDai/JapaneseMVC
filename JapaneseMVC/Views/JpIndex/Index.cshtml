	<div class="col-md-12">
		<ul class="nav nav-tabs formatFont12px">
			<li class="active">
				<a href="#renshuuA" data-toggle="tab"><span class="glyphicon glyphicon-book font-weight-bold text-primary"></span><span class="formatFont12px-textshadow"> 練習A</span></a>
			</li>
			<li>
				<a href="#renshuuB" data-toggle="tab"><span class="glyphicon glyphicon-book font-weight-bold text-primary"></span><span class="formatFont12px-textshadow"> 練習B</span></a>
			</li>
			<li>
				<a href="#renshuuC" data-toggle="tab"><span class="glyphicon glyphicon-headphones font-weight-bold text-primary"></span><span class="formatFont12px-textshadow"> 練習C</span></a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade active in" id="renshuuA">
				<br />
				@foreach (練習A p in ViewBag.list練習A)
				{
					<div class="row">
						<div class="col-md-8 col-md-offset-1 well well-sm formatFont12px">
							@Html.Raw(@p.練習Aの本)
						</div>
						<div class="col-md-1">
							<button class="btn btn-primary btn-sm detail-btn" data-toggle="modal" data-target="#myModalA" data-id-a="@p.Id">
								<span class="glyphicon glyphicon-open"></span>
							</button>
							<!-- Modal -->
							<div class="modal fade" id="myModalA" tabindex="-1" role="dialog" aria-labelledby="myModalLabelA" aria-hidden="true">
								<div class="modal-dialog modal-lg">
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
											<h4 class="formatFont12px">Tooltip: Click button to show Vietnamese translation.</h4>
										</div>
										<div class="modal-body">
											<div id='myModalContentA'></div>
										</div>
									</div>
									<!-- /.modal-content -->
								</div>
								<!-- /.modal-dialog -->
							</div>
						</div>
					</div>
				}
			</div>
			<div class="tab-pane fade" id="renshuuB">
				<br />
				@foreach (練習B item in ViewBag.練習B)
				{
					<div id="練習Bdiv" class="well">
						<div class="row">
							<div class="col-md-12">
								@if (!(item.練習Bの写真 == "noimage.jpg"))
								{
									<img class="img-thumbnail img-responsive" src='/img/練習BImg/@item.練習Bの写真' />
								}
							</div>
						</div>
						<br />
						<div class="row">
							<div class="col-md-6 col-md-offset-1 formatFont12px">
								@Html.Raw(@item.練習Bの本)
							</div>
							<div class="col-md-1 col-md-offset-2">

								<button class="btn btn-primary btn-sm detail-btn" data-toggle="modal" data-target="#myModalB" data-id-b="@item.練習BID">
									<span class="glyphicon glyphicon-open"></span>
								</button>

								<!-- Modal -->
								<div class="modal fade" id="myModalB" tabindex="-1" role="dialog" aria-labelledby="myModalLabelB" aria-hidden="true">
									<div class="modal-dialog modal-lg">
										<div class="modal-content">
											<div class="modal-header">
												<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
												<h4 class="formatFont12px">Tooltip: Click button to show Vietnamese translation.</h4>
											</div>
											<div class="modal-body">
												<div id='myModalContentB'></div>
											</div>
										</div>
										<!-- /.modal-content -->
									</div>
									<!-- /.modal-dialog -->
								</div>
							</div>
						</div>
					</div>
				}
			</div>
			<div class="tab-pane fade" id="renshuuC">
				<br />
				@foreach (練習C p in ViewBag.練習C)
				{
					<div id="練習Cdiv" class="well">
						<div class="row">
							<div class="col-md-5">
								<br />
								<video style="border: 2px solid #0094ff;" class="video-js vjs-default-skin" poster='/img/練習CImg/@p.練習Cの写真' data-setup="{}"
									   controls="controls" height="250">
									<source src='/audio/練習/@p.練習CAudio' type="audio/mp3" />
									Your browser does not support HTML5 video.
								</video>
								<br />
								<ul id="Rb" class="list-inline">
									<li><button id="btn12px" disabled class="btn btn-sm btn-primary">12px</button></li>
									<li><button id="btn14px" class="btn btn-sm btn-primary">14px</button></li>
									<li><button id="btn16px" class="btn btn-sm btn-primary">16px</button></li>
									<li><button id="showHintRenshuuC" class="btn btn-sm btn-primary" data-id-show="@p.練習CID">ベトナム語</button></li>
									<li>
										<button class="btn btn-primary btn-sm detail-btn" data-toggle="modal" data-target="#myModalC" data-id-c="@p.練習CID">
											見る
										</button>
									</li>
								</ul>

								<!-- Modal -->
								<div class="modal fade" id="myModalC" tabindex="-1" role="dialog" aria-labelledby="myModalLabelC" aria-hidden="true">
									<div class="modal-dialog modal-lg">
										<div class="modal-content">
											<div class="modal-header">
												<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
												<h4 class="formatFont12px">Tooltip: Click button to show Vietnamese translation.</h4>
											</div>
											<div class="modal-body">
												<div id='myModalContentC'></div>
											</div>
										</div>
										<!-- /.modal-content -->
									</div>
									<!-- /.modal-dialog -->
								</div>
							</div>
							<div class="col-md-6 formatFont12px">
								<br />
								@Html.Raw(@p.練習Cの本)
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 col-md-offset-5 bg-success showHintRenshuuC formatFont12px">
								@Html.Raw(@p.ベトナム語)
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

<hr />
@*問題*@
<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-tabs formatFont12px">
			<li class="active">
				<a href="#mondai" data-toggle="tab"><span class="glyphicon glyphicon-headphones font-weight-bold text-primary"></span><span class="formatFont12px-textshadow"> 問題</span></a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade active in" id="mondai">
				<br />
				@foreach (問題 p in ViewBag.問題)
				{
					<div id="問題div" class="well">
						<div class="row">
							@if (p.問題Audio != "No Audio File")
							{<div class="col-md-6">
