@*Grammar*@
<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-tabs formatFont12px">
			<li class="active">
				<a href="#grammar" data-toggle="tab"><span class="glyphicon glyphicon-book font-weight-bold text-primary"></span><span class="formatFont12px-textshadow"> 文法</span></a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade active in formatFont12px" id="grammar">
				<br />
				<div id="Grammardiv" class="row">
					<div class="col-md-12">
						<div id="accordion">
							@foreach (Model.EF.GrammarNihongo p in ViewBag.Grammar)
							{

								<h4 class="formatFont12px">@Html.Raw(p.GrammarTitle)</h4>
								<div class="formatFont12px">@Html.Raw(p.Grammar)</div>

							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section N5scripts{
	<script src="~/Assets/Client/MinnanoNihongoPage/changePxOnJpIndex.js"></script>
	<script>

		$(function () {
			//videojs
			videojs.options.flash.swf = "video-js.swf";

			//accordion
			$("#accordion").accordion({ heightStyle: "content", collapsible: true });
			//dataTAble
			$('table.display').dataTable({
				responsive: true,
				"bAutoWidth": false,
				"ordering": false
			});
		});


		$("[data-id-a]").click(function () {
			var renshuuAId = $(this).attr("data-id-a");
			$.ajax({
				url: '/N5/GetRenshuuA/' + renshuuAId,
				type: "Get",
				dataType: "html",
				data: { renshuuAId: renshuuAId },
				success: function (model) {
					$('#myModalContentA').html(model);
				}
			});
		});
		$("[data-id-b]").click(function () {
			var renshuuBId = $(this).attr("data-id-b");
			$.ajax({
				url: '/N5/GetRenshuuB/' + renshuuBId,
				type: "Get",
				dataType: "html",
				data: { renshuuBId: renshuuBId },
				success: function (model) {
					$('#myModalContentB').html(model);
				}
			});
		});
		$("[data-id-c]").click(function () {
			var renshuuCId = $(this).attr("data-id-c");
			$.ajax({
				url: '/N5/GetRenshuuC/' + renshuuCId,
				type: "Get",
				dataType: "html",
				data: { renshuuCId: renshuuCId },
				success: function (model) {
					$('#myModalContentC').html(model);
				}
			});
		});
		$("[data-id-md1]").click(function () {
			var MondaiId = $(this).attr("data-id-md1");
			$.ajax({
				url: '/N5/GetMondai/' + MondaiId,
				type: "Get",
				dataType: "html",
				data: { MondaiId: MondaiId },
				success: function (model) {
					$('#myModalContentMD1').html(model);
				}
			});
		});

		//showHintRenshuuC
		$(function () {
			$('.showHintRenshuuC').hide();
			$('[data-id-show]').click(function () {
				$('.showHintRenshuuC').toggle();
			});
		});
	</script>
}