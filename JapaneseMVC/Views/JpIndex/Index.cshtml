@using Model.EF

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/N5Template/_N5Layout.cshtml";
}

<style>
	hr {
		height: 5px;
		background-color: #0094ff;
	}
</style>
<br />

@*言葉*@

<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-tabs formatFont12px">
			<li class="active">
				<a href="#kotoba" data-toggle="tab"><span class="formatFont12px-textshadow">言葉</span></a>
			</li>
			<li>
				<a href="#kotobaPlus" data-toggle="tab"><span class="formatFont12px-textshadow">言葉 Plus</span></a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade active in formatFont12px" id="kotoba">
				<br />
				<div class="panel panel-default">
					<div class="panel-body">
						<table class="table table-bordered table-responsive table-hover display">
							<thead>
								<tr>
									<th>#</th>
									<th>ひらがな</th>
									<th>漢字</th>
									<th>ベトナム語</th>
								</tr>
							</thead>
							<tbody>
								@{int a = 1;}
								@foreach (言葉Table p in ViewBag.list言葉)
								{
									<tr>
										<td><span class="badge">@(a++)</span></td>
										<td><div class="hvr-bounce-in">@p.ひらがな</div></td>
										<td><div class="hvr-bounce-in">@p.漢字 <br /> <span style="color:#ff0000">@p.音漢字</span></div></td>
										<td>@p.ベトナム語</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
					<div class="panel-footer">
						@foreach (第課 p in ViewBag.list第課)
						{
							<table>
								<tr>
									<td>
										<label class="fa fa-headphones fa-2x">
										</label>
									</td>
									<td>
										<audio controls="controls">
											<source src='/audio/言葉/@p.言葉audio' type="video/mp4" />
										</audio>
									</td>
								</tr>
							</table>

						}
					</div>
				</div>
			</div>
			<div class="tab-pane fade formatFont12px" id="kotobaPlus">
				<br />
				<div class="panel panel-default">
					<div class="panel-body">
						<table class="table table-bordered table-hover table-responsive display">
							<thead>
								<tr>
									<th>#</th>
									<th>ひらがな</th>
									<th>漢字</th>
									<th>ベトナム語</th>
								</tr>
							</thead>
							<tbody>
								@{int b = 1;}
								@foreach (言葉PlusTable p in ViewBag.list言葉Plus)
								{
									<tr>
										<td><span class="badge">@(b++)</span></td>
										<td><div class="hvr-bounce-in">@p.ひらがな</div></td>
										<td><div class="hvr-bounce-in">@p.漢字 <br /> <span style="color:#ff0000">@p.音漢字 </span></div></td>
										<td>@p.ベトナム語</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<hr />

@*会話,文型,例文*@
<div id="会話div" class="row">
	<div class="col-md-12">
		<ul class="nav nav-tabs formatFont12px">
			<li class="active">
				<a href="#kaiwa" data-toggle="tab"><span class="formatFont12px-textshadow">会話</span></a>
			</li>
			<li>
				<a href="#bunkei" data-toggle="tab"><span class="formatFont12px-textshadow">文型</span></a>
			</li>
			<li>
				<a href="#reibun" data-toggle="tab"><span class="formatFont12px-textshadow">例文</span></a>
			</li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade active in" id="kaiwa">
				<br />
				<div class="row">

					@foreach (会話 p in ViewBag.list会話)
					{
						<div class="col-md-4 text-center">
							<video style="border: 2px solid #0094ff;" id="example_video_1" class="video-js vjs-default-skin"
								   poster="~/img/会話/@p.会話の写真" data-setup="{}"
								   controls preload="none">
								<source src="~/audio/会話/@p.会話Audio" type="audio/mp3" />
								Your browser does not support HTML5 video.
							</video>
							<br />
							<ul id="Kw" class="list-inline">
								<li><button id="btn12px" disabled class="btn btn-sm btn-primary">12px</button></li>
								<li><button id="btn14px" class="btn btn-sm btn-primary">14px</button></li>
								<li><button id="btn16px" class="btn btn-sm btn-primary">16px</button></li>
								<li><button id="showHint" class="btn btn-sm btn-primary">ベトナム語</button></li>
							</ul>
						</div>
						<div class="col-md-6">
							<div class="changeKwPx formatFont12px bg-danger">
								@Html.Raw(p.会話の本)
							</div>
							<br />
							<div class="hintKw formatFont12px bg-success">
								@Html.Raw(p.ベトナム語)
							</div>
						</div>
					}
				</div>
			</div>
			<div class="tab-pane fade" id="bunkei">
				<br />
				<div class="row">
					@foreach (第課 p in ViewBag.list第課)
					{
						<div class="col-md-3">
							<audio controls="controls">
								<source src='/audio/文型/@p.文型audio' type="video/mp4" />
							</audio>
						</div>
						<div class="col-md-6 col-md-offset-1">
							<ul id="Bk" class="list-inline">
								<li><button id="btn12px" disabled class="btn btn-sm btn-primary">12px</button></li>
								<li><button id="btn14px" class="btn btn-sm btn-primary">14px</button></li>
								<li><button id="btn16px" class="btn btn-sm btn-primary">16px</button></li>
								<li><button id="showHint" class="btn btn-sm btn-primary">ベトナム語</button></li>
							</ul>
						</div>
					}
				</div>

				<br />
				@foreach (文型 p in ViewBag.list文型)
				{
					<div class="row">
						<div class="changeBkPx col-md-6 col-md-offset-1 formatFont12px">
							@Html.Raw(@p.文型の本)
						</div>
					</div>
					<div class="row">
						<div class="hintBk col-md-6 col-md-offset-2 formatFont12px bg-success">
							@Html.Raw(p.ベトナム語)
						</div>
					</div>
					<br />
				}
			</div>
			<div class="tab-pane fade" id="reibun">
				<br />
				@foreach (第課 p in ViewBag.list第課)
				{
					<div class="row">
						<div class="col-md-3">
							<audio controls="controls">
								<source src='/audio/例文/@p.例文audio' type="video/mp4" />
							</audio>
						</div>
						<div class="col-md-6 col-md-offset-1">
							<ul id="Rb" class="list-inline">
								<li><button id="btn12px" disabled class="btn btn-sm btn-primary">12px</button></li>
								<li><button id="btn14px" class="btn btn-sm btn-primary">14px</button></li>
								<li><button id="btn16px" class="btn btn-sm btn-primary">16px</button></li>
								<li><button id="showHint" class="btn btn-sm btn-primary">ベトナム語</button></li>
							</ul>
						</div>
					</div>
				}
				<br />

				@foreach (例文 p in ViewBag.list例文)
				{
					<div class="row">
						<div class="changeRbPx col-md-6 col-md-offset-1 formatFont12px">
							@Html.Raw(@p.例文の本)
							<br />
						</div>
						<div class="hintRb col-md-6 formatFont12px bg-success">
							@Html.Raw(p.ベトナム語)
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

<hr />
@*練習A,B,C*@
