@using Model.EF
@model 練習A

@{
    ViewBag.Title = "Index";
}

<br />
<ul class="nav nav-tabs formatFont12px">
    <li class="active">
        <a href="#edit" data-toggle="tab">編集</a>
    </li>
    <li>
        <a href="#list" data-toggle="tab">リストを　見る</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in formatFont12px" id="edit">
        <br />
        @using (Html.BeginForm("Index", "練習A", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "error" })
        <div class="row">
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.Id, "　ID (Auto Increase)", new { @class = "control-label" })

                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "error" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.第課ID, "　第?課", new { @class = "control-label" })

                @Html.DropDownListFor(model => model.第課ID, (SelectList)ViewBag.第課List, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.第課ID, "", new { @class = "error" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(model => model.練習Aの名, "　練習Aの名", new { @class = "control-label" })

                @Html.TextBoxFor(model => model.練習Aの名, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.練習Aの名, "", new { @class = "error" })
            </div>
        </div>

            <div class="row">

                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.練習Aの本, "　第?課", new { @class = "control-label" })

                    @Html.TextAreaFor(model => model.練習Aの本, new { @class = "form-control", id = "txt練習A" })
                    @Html.ValidationMessageFor(model => model.練習Aの本, "", new { @class = "error" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.練習Aの答え, "　答え", new { @class = "control-label" })

                    @Html.TextAreaFor(model => model.練習Aの答え, new { @class = "form-control", id = "txt練習Answer1" })
                    @Html.ValidationMessageFor(model => model.練習Aの答え, "", new { @class = "error" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.ベトナム語, "　ベトナム語", new { @class = "control-label" })

                    @Html.TextAreaFor(model => model.ベトナム語, new { @class = "form-control", id = "txt練習AVietnamese" })
                    @Html.ValidationMessageFor(model => model.ベトナム語, "", new { @class = "error" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_ListButton")
                </div>
            </div>

        }
    </div>
    <div class="tab-pane fade formatFont12px" id="list">
        <div class="row">
            <div class="col-md-3">
                <br />
                @Html.DropDownList("ddl第課List", (SelectList)ViewBag.第課List, "Select 第課(Daika): ", new { @class = "form-control" })
                <br />
            </div>
        </div>
        <div class="row">

            <div id="divPartialView" class="col-md-12">
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            var editor = CKEDITOR.replace('txt練習A', {
                customConfig: '/Assets/plug-in/ckeditor/config.js',
                allowedContent: true
            });
            var editor1 = CKEDITOR.replace('txt練習Answer1', {
                customConfig: '/Assets/plug-in/ckeditor/config.js',
                allowedContent: true
            });
            var editor2 = CKEDITOR.replace('txt練習AVietnamese', {
                customConfig: '/Assets/plug-in/ckeditor/config.js',
                allowedContent: true
            });
            $("#ddl__List").change(function () {
                var 第課ID = $(this).val();

                $.ajax({
                    url: '/Admin/練習A/Get/',
                    type: "Get",
                    dataType: "html",
                    data: { 第課ID: 第課ID },
                    success: function (model) {
                        $("#divPartialView").html(model);
                    }
                });

            });
        });
    </script>
}