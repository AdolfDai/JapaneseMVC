@using Model.EF

<link href="~/Assets/lib/video-js/video-js.css" rel="stylesheet" />
<table class="table table-bordered table-hover table-responsive display">
	<thead>
		<tr style="color:black; font-weight:bold;">
			<th><span class="glyphicon glyphicon-sort-by-attributes"></span></th>
			<th>問題</th>
		</tr>
	</thead>
	<tbody>
		@foreach (問題 Item in Model)
		{

			<tr>

				<td>
					<a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { Id = Item.問題ID })">
						<span class="glyphicon glyphicon-edit"></span> @Item.問題ID Edit
					</a>
					<br />
					<br />
					<a class="btn btn-primary btn-sm detail-btn"  href="@Url.Action("Index","問題の答え")">
						<span class="glyphicon glyphicon-plus"> Add 問題の答え</span>
					</a>
				</td>
				<td>
					<div class="row">
						<div class="col-md-6">
							<span class="text-danger">Title: @Html.Raw(Item.第課.第課Subject)</span>
						</div>
					</div>
					<div class="row">
						@if (Item.問題Audio != "No Audio File")
						{
							<div class="col-md-5">
								<video style="border: 2px solid #0094ff;" class="video-js vjs-default-skin"
									   poster='/img/問題Img/@Item.問題の写真' data-setup="{}" controls="controls" height="150">
									<source src='/audio/問題/@Item.問題Audio' type="audio/mp3" />
									Your browser does not support HTML5 video.
								</video>
							</div>
						}
						else if(Item.問題の写真 != "noimage.jpg")
						{
							<div class="col-md-5">
								<img class="img-thumbnail img-responsive" src='/img/問題Img/@Item.問題の写真' height="250" width="250" />
							</div>
						}
						<div class="col-md-6 bg-danger">
							@Html.Raw(Item.問題の本)
						</div>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

<script src="~/Assets/lib/video-js/video.js"></script>
<script>
	$(function () {
		$('table.display').DataTable({
			responsive: true,
			"bAutoWidth": false,
			'bProcessing': true,
			"aLengthMenu": [[1, 5, 10, -1], [1, 5, 10, "All"]],
			"iDisplayLength": 1,
			"ordering": false
		});
	});
</script>