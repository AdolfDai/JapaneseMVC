@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LoginForm.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="login-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" style="font-weight:bold; font-variant:small-caps; text-align:center">Please Sign In</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBox("Id", null, new { @class = "form-control", @placeholder = "Username", @autofocus = "autofocus" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Password", null, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                        </div>
                        <div class="checkbox" style="font-weight:bold; font-variant:small-caps; margin-left:20px;">
                            <label>
                                @Html.CheckBox("Remember")
                                <b>Remember Me !!</b>
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button style="font-size:large" type="submit" class="btn btn-lg btn-success btn-block"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>