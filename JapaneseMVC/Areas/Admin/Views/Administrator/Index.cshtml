@using Model.EF
@model Administrator
@{
    ViewBag.Title = "Index";
}

<br />
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#edit" data-toggle="tab">Operations</a>
    </li>
    <li>
        <a href="#list" data-toggle="tab">View List</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade in active" id="edit">
        <br />
        @using (Html.BeginForm("Index", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Id, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id, null, new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Phone, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.ModifiedBy, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.ModifiedBy, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ModifiedBy, null, new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.ModifiedDate, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.ModifiedDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ModifiedDate, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.RoleName, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Status, new { @class = "control-label" })

                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_ListButton")
                </div>
            </div>
        }
    </div>
    <div class="tab-pane fade" id="list">
        <br />
        <table class="table table-hover table-responsive display">
            <thead>
                <tr style="color:black; font-weight:bold;">
                    <td><span class="glyphicon glyphicon-sort-by-attributes"></span> ID</td>
                    <td><span class="glyphicon glyphicon-star"></span> Password</td>
                    <td><span class="glyphicon glyphicon-list"></span> Name</td>
                    <td><span class="glyphicon glyphicon-headphones"></span> Phone</td>
                    <td><span class="glyphicon glyphicon-list"></span> M.By</td>
                    <td><span class="glyphicon glyphicon-headphones"></span> M.Date</td>
                    <td><span class="glyphicon glyphicon-headphones"></span> R.Name</td>
                    <td><span class="glyphicon glyphicon-headphones"></span> Status</td>
                    <td><span class="glyphicon glyphicon-wrench"></span> エディト</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Administrator Item in ViewBag.Items)
                {

                    <tr style="font-weight:bold">

                        <td>@Item.Id</td>
                        <td>@Item.Password</td>
                        <td>@Item.Name</td>
                        <td>@Item.Phone </td>
                        <td>@Item.ModifiedBy </td>
                        <td>@Item.ModifiedDate </td>
                        <td>@Item.RoleName </td>
                        <td>@Item.Status </td>
                        <td>
                            <a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { Id = Item.Id })">
                                <span class="glyphicon glyphicon-edit"></span> Edit
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $('table.display').DataTable({
                responsive: true,
                "bAutoWidth": false,
                "ordering": false
            });
        });
    </script>
}