@using Model.EF
<link href="~/Assets/lib/video-js/video-js.css" rel="stylesheet" />
<table class="table table-bordered table-hover table-responsive display">
	<thead>
		<tr>
			<th><span class="glyphicon glyphicon-sort-by-attributes"></span></th>
			<th>練習C</th>
			<th><span class="glyphicon glyphicon-list">　ベトナム語</span></th>
		</tr>
	</thead>
	<tbody>
		@foreach (練習C Item in Model)
		{

			<tr>
				<td>
					<a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { Id = Item.練習CID })">
						<span class="glyphicon glyphicon-edit"></span> @Item.練習CID
					</a>
				</td>
				<td>
					<video style="border: 2px solid #0094ff;" id="example_video_1" class="video-js vjs-default-skin" poster='/img/練習CImg/@Item.練習Cの写真' data-setup="{}"
						   controls preload="none" height="150">
						<source src='~/audio/練習/@Item.練習CAudio' type="audio/mpeg" />
						Your browser does not support HTML5 video.
					</video>
				</td>
				<td><span class="text-danger">@Html.Raw(Item.第課.第課Subject)</span></td>
			</tr>
			<tr>
				<td></td>
				<td>
					@Html.Raw(Item.練習Cの本)
				</td>
				<td>
					<div class="bg-success">
						@Html.Raw(Item.ベトナム語)
					</div>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					@Html.Raw(Item.練習C1Ans)
				</td>
				<td>
					<div class="bg-success">
						@Html.Raw(Item.練習C1AnsVNI)
					</div>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					@Html.Raw(Item.練習C2Ans)
				</td>
				<td>
					<div class="bg-success">
						@Html.Raw(Item.練習C2AnsVNI)
					</div>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					@Html.Raw(Item.練習C3Ans)
				</td>
				<td>
					<div class="bg-success">
						@Html.Raw(Item.練習C3AnsVNI)
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

<script src="~/Assets/lib/video-js/video.js"></script>
<script>
	$(function () {
		$('table.display').DataTable({
			responsive: true,
			"bAutoWidth": false,
			'bProcessing': true,
			"aLengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],
			"iDisplayLength": 5,
			"ordering": false
		});
	});
</script>