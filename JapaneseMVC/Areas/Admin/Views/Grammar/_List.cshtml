@using Model.EF

<table class="table table-bordered table-hover table-responsive display">
	<thead>
		<tr>
			<th><span class="glyphicon glyphicon-sort-by-attributes"></span> </th>
			<th>文法</th>
		</tr>
	</thead>
	<tbody>
		@foreach (GrammarNihongo Item in Model)
		{

			<tr style="font-weight:bold;">
				<td class="text-center">
					<a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { Id = Item.GrammarID })">
						<span class="glyphicon glyphicon-edit"></span> @Item.GrammarID
					</a>
				</td>
				<td>
					<span class="text-danger">@Html.Raw(Item.第課.第課Subject)</span>
					<span class="text-danger">@Html.Raw(Item.GrammarTitle)</span>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<div class="formatFont12px">
						@Html.Raw(Item.Grammar)
					</div>
				</td>
				<td></td>
			</tr>
		}
	</tbody>
</table>
<script>
	$(function () {
		$('table.display').DataTable({
			responsive: true,
			"bAutoWidth": false,
			'bProcessing': true,
			"aLengthMenu": [[2, 4, 12, -1], [2, 4, 12, "All"]],
			"iDisplayLength": 2,
			"ordering": false
		});
	});
</script>