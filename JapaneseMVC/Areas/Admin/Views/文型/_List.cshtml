@using Model.EF

<table class="table table-bordered table-hover table-responsive display">
    <thead>
        <tr>
            <th><span class="glyphicon glyphicon-sort-by-attributes"></span></th>
            <th>文型</th>
            <th>第課</th>
        </tr>
    </thead>
    <tbody>
        @foreach (文型_Table Item in Model)
        {

            <tr>

                <td>
                    <a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { Id = Item.文型ID })">
                        <span class="glyphicon glyphicon-edit"></span> @Item.文型ID
                    </a>
                </td>
                <td>
                    @Html.Raw(Item.文型)
                    @Html.Raw(Item.文型Vietnamese)
                </td>
                <td>
                    @Item.第課_Table.第課Name
                    @Html.Raw(Item.第課_Table.第課Subject)
                </td>
            </tr>

        }
    </tbody>
</table>

<script>
    $(function () {
        $('table.display').DataTable({
            responsive: true,
            "bAutoWidth": false,
            "aLengthMenu": [[5, 10, 20, -1], [1, 5, 10, "All"]],
            "iDisplayLength": 5,
            "ordering": false
        });
    });
</script>